<center>
<div>
  <h1>Search for a movie</h1>
  <%= form_tag search_movie_path, method: :get, id: "search-lookup-form" do %>
    <div class="form-group row no-padding text-center col-md-6">
      <div class="col-md-10 input-group-lg">
        <%= text_field_tag :query, params[:query], placeholder: "Search for movie", autofocus: true, 
                                       'aria-label': "Large", class: "form-control search-box input-lg" %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class: "btn btn-lg btn-success" ) do %>
          <i class="fa fa-search"></i> Search
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</center>

<h2>Now Playing</h2>
<% @now_playing[:results].first(6).each do |movie| %>
  <% if movie %>
    <%= link_to movie_path(movie['id']) do %>
      <%= image_tag("#{@config.images.base_url}w154#{movie['poster_path']}") if movie['poster_path'] %>
    <% end %>
  <% end %> 
<% end %>

<h2>Upcoming</h2>
<% @upcoming[:results].first(6).each do |movie| %>
  <% if movie %>
    <%= link_to movie_path(movie['id']) do %>
      <%= image_tag("#{@config.images.base_url}w154#{movie['poster_path']}") if movie['poster_path'] %>
    <% end %>
  <% end %> 
<% end %>